<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oop_project3.models.ReservationConfirmation">
    <top>
        <HBox alignment="CENTER" prefHeight="70.0" prefWidth="800.0" style="-fx-background-color: #D32F2F; -fx-padding: 15;">
            <Label style="-fx-font-size: 32px; -fx-text-fill: white;" text="Confirm Your Reservation" />
        </HBox>
    </top>

    <center>
        <VBox prefHeight="300.0" prefWidth="800.0" spacing="15" style="-fx-padding: 20; -fx-background-color: #F9F9F9;">
            <HBox spacing="10">
                <Label style="-fx-font-size: 20px; -fx-text-fill: #333333;" text="Movie Title:" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="Your Selected Movie" />
            </HBox>
            <HBox spacing="10">
                <Label style="-fx-font-size: 20px; -fx-text-fill: #333333;" text="Hall:" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="3" />
            </HBox>
            <HBox spacing="10">
                <Label style="-fx-font-size: 20px; -fx-text-fill: #333333;" text="Seat Number:" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="A1" />
            </HBox>
            <HBox spacing="10">
                <Label style="-fx-font-size: 20px; -fx-text-fill: #333333;" text="Customer Name:" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="Lung Andrada" />
            </HBox>
            <HBox spacing="10">
                <Label style="-fx-font-size: 20px; -fx-text-fill: #333333;" text="Date:" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="24th Oct 2023" />
            </HBox>
            <HBox spacing="10">
                <Label style="-fx-font-size: 20px; -fx-text-fill: #333333;" text="Time:" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="7:00 PM" />
            </HBox>
            <HBox spacing="10">
                <Label style="-fx-font-size: 20px; -fx-text-fill: #333333;" text="Contact Us:" />
                <Label style="-fx-font-size: 18px; -fx-text-fill: #555555;" text="contact@cinema.com" />
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" prefHeight="86.0" prefWidth="800.0" spacing="30" style="-fx-padding: 15;">
            <Button fx:id="CancelReservationButton" onAction="#handleCancel" style="-fx-background-color: gray; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 5;" text="Cancel" />
            <Button fx:id="ConfirmReservationButton" onAction="#handleConfirmReservation" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20; -fx-background-radius: 5;" text="Confirm Reservation" />
        </HBox>
    </bottom>
</BorderPane>
