<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="481.0" prefWidth="665.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"  fx:controller="org.example.oop_project3.controllers.MovieDetailsController">

    <top>
        <HBox alignment="CENTER" prefHeight="134.0" prefWidth="665.0" style="-fx-background-color: #D32F2F;">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            <ImageView fx:id="posterImageView" fitHeight="150" fitWidth="100" />
            <VBox spacing="10">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                <Label fx:id="titleLabel" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="Movie Title" />
                <Label fx:id="genreLabel" style="-fx-font-size: 14; -fx-text-fill: lightgray;" text="Genre" />
                <Label fx:id="releaseDateLabel" style="-fx-font-size: 12; -fx-text-fill: gray;" text="Release Date" />
            </VBox>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets bottom="15" left="15" right="15" top="15" /></padding>
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Description:" />
            <Label fx:id="descriptionLabel" style="-fx-font-size: 14; -fx-text-fill: #333333;" text="Description goes here..." wrapText="true" />
        </VBox>
    </center>

    <right>
        <VBox prefHeight="293.0" prefWidth="295.0" spacing="10">
            <padding><Insets bottom="15" left="15" right="15" top="15" /></padding>
            <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Schedule:" />
            <ScrollPane fitToWidth="true" prefWidth="200">
                <content>
                    <VBox fx:id="scheduleContainer" prefHeight="193.0" prefWidth="249.0" spacing="10" />
                </content>
            </ScrollPane>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" prefHeight="15.0" prefWidth="665.0" style="-fx-background-color: #D32F2F;">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
         <children>

               <Button fx:id="backBtn" alignment="CENTER" prefHeight="29.0" prefWidth="65.0" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-border-color: transparent; -fx-padding: 5;" text="Back" />
         </children>
        </HBox>
    </bottom>

</BorderPane>
